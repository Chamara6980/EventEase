<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Servlet for InsertPackageDetails -->
    <servlet>
        <servlet-name>InsertPackageDetails</servlet-name>
        <servlet-class>Packages.InsertPackageDetails</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InsertPackageDetails</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <!-- Servlet for ViewPackageDetailsServlet -->
    <servlet>
        <servlet-name>ViewPackageDetailsServlet</servlet-name>
        <servlet-class>Packages.ViewPackageDetailsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewPackageDetailsServlet</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>

    <!-- Servlet for UpdatePackageDetailsServlet -->
    <servlet>
    <servlet-name>UpdatePackageDetailsServlet</servlet-name>
    <servlet-class>Packages.UpdatePackageDetailsServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>UpdatePackageDetailsServlet</servlet-name>
    <url-pattern>/UpdatePackageDetailsServlet</url-pattern>  <!-- Check URL pattern -->
</servlet-mapping>



    <!-- Servlet for DeletePackageDetailsServlet -->
    <servlet>
    <servlet-name>DeletePackageServlet</servlet-name>
    <servlet-class>Packages.DeletePackageServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>DeletePackageServlet</servlet-name>
    <url-pattern>/DeletePackageServlet</url-pattern>
</servlet-mapping>

</web-app>
